<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.week3inclassdemo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label fx:id="distanceLabel"/>
    <TextField fx:id="distanceField"/>
    <Label fx:id="fuelLabel"/>
    <TextField fx:id="fuelUsedField"/>
    <Button fx:id="calculateButton" onAction="#calculateFuelCost"/>
    <Label fx:id="resultLabel"/>
    <Button fx:id="enBTN" onAction="#setEN" text="EN"/>
    <Button fx:id="frBTN" onAction="#setFR" text="FR"/>
    <Button fx:id="jpBTN" onAction="#setJP" text="JP"/>
    <Button fx:id="irBTN" onAction="#setIR" text="IR"/>
</VBox>